<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.mypofol.mapper.MemberMapper">

	<resultMap type="net.mypofol.model.MemberVO" id="memberMap">
		<id property="userid" column="userid"/>
		<result property="userid" column="userid"/>
		<result property="userpw" column="userpw"/>
		<result property="userName" column="username"/>
		<result property="regDate" column="regdate"/>
		<result property="updateDate" column="updatedate"/>
		<collection property="authList" resultMap="authMap"></collection>
	</resultMap>
	
	<resultMap type="net.mypofol.model.AuthVO" id="authMap">
		<result property="userid" column="userid"/>
		<result property="auth" column="auth"/>
	</resultMap>

	<!-- SELECT QUERY -->
		<select id="read" resultMap="memberMap">
			select mem.userid, userpw, username, enabled, regdate, updatedate, auth from
			t_member mem left outer join t_member_auth auth on mem.userid = auth.userid
			where mem.userid = #{userid}
		</select>
	
	<!-- INSERT QUERY -->
		<insert id="insertMember" parameterType="net.mypofol.model.MemberVO">
			insert all 
				into t_member(userid, userpw, userName) values (#{userid},#{userpw},#{userName})
				into t_member_auth(userid, auth) values (#{userid}, 'ROLE_USER')
				select * from dual
		</insert>
		
